	</parent>
	<groupId>se.rsv.arende</groupId>
	<artifactId>arendeinformationspring</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>arendeinformationspring</name>
	<packaging>war</packaging>
	<description>Demo project for Spring Boot</description>

	<properties>
		<java.version>1.8</java.version>
		 
      <!-- The main class to start by executing java -jar -->
      <start-class>se.rsv.arende.arendeinformationspring</start-class>
  
